<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mycampus.rontikeky.myacademic.Activity.ChooseFaculty">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Fakultas :"
                android:id="@+id/selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/filter"
                android:id="@+id/filterDate"
                android:text="atur tanggal"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:textColor="#fff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/fromLayout"
                android:visibility="gone">
                <TextView
                    android:text="Dari Tanggal :"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:focusable="false"
                    android:id="@+id/fromDate"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/toLayout"
                android:visibility="gone">
                <TextView
                    android:text="Sampai Tanggal :"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:focusable="false"
                    android:id="@+id/toDate"/>
            </LinearLayout>

            <Button
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:paddingLeft="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="Simpan"
                android:drawableLeft="@drawable/ic_check_24dp"
                android:pointerIcon="hand"
                android:textColor="#fff"
                android:typeface="serif"
                android:onClick="btnLogin"
                android:id="@+id/btnSelesai"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="30dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
