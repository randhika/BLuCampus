<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.mycampus.rontikeky.myacademic.Activity.SuccessRegister">

    <View
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konfirmasi Email"
        android:layout_marginTop="10dp"
        android:textSize="24dp"
        android:typeface="serif"
        android:textColor="#000"/>
    <View
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nama"
            android:text="Berhasil"
            android:textColor="#000"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:typeface="serif"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20dp"
            android:typeface="serif"
            android:id="@+id/email"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:text="Link Konfirmasi telah di kirimkan ke email anda, silahkan lakukan konfirmasi. Cek Spam jika tidak ada di inbox"/>
    </android.support.v7.widget.CardView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/btnBack"
        android:background="@drawable/button"
        android:text="Kembali"
        android:textColor="#fff"
        android:textSize="18dp"
        android:drawableLeft="@drawable/ic_arrow_back_black_24dp_white"
        android:drawableStart="@drawable/ic_arrow_back_black_24dp_white"
        android:paddingLeft="20dp"
        android:drawablePadding="-20dp"/>

</LinearLayout>
