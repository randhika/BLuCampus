<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ResetPassword">

    <View
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:layout_marginTop="10dp"
        android:textSize="24dp"
        android:typeface="serif"
        android:textColor="#000"/>
    <View
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>

    <android.support.v7.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:typeface="serif"
            android:layout_margin="10dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="20dp"
            app:cardPreventCornerOverlap="false"
            android:text="Masukan email anda. akan dikirimkan link untuk melakukan reset password jika email sesuai dengan terdaftar"/>
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/txtEmailReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/edittext"
        android:drawableLeft="@drawable/ic_email_24dp"
        android:drawableStart="@drawable/ic_email_24dp"
        android:hint=" Email"
        android:padding="10dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:typeface="serif" />

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:paddingLeft="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Kirim"
        android:pointerIcon="hand"
        android:textColor="#fff"
        android:typeface="serif"
        android:id="@+id/btnReset"
        android:nestedScrollingEnabled="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:typeface="serif"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:background="#00ff00"
        android:padding="5dp"
        android:text=""
        android:visibility="gone"
        android:id="@+id/resultReset"/>
</LinearLayout>
