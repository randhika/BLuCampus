<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ResetPassword"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_marginTop="10dp"
            android:textSize="24dp"
            android:typeface="serif"
            android:textColor="#000"/>
        <View
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <android.support.v7.widget.CardView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:typeface="serif"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:text="Masukan Password, password harus sesuai dengan konfirmasi password"/>
        </android.support.v7.widget.CardView>

        <EditText
            android:drawableStart="@drawable/ic_https_24dp"
            android:drawableLeft="@drawable/ic_https_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:hint=" Password Baru"
            android:background="@color/colorPrimary"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:typeface="serif"
            android:id="@+id/txtPassword"
            android:inputType="textPassword"
            />

        <EditText
            android:drawableStart="@drawable/ic_https_24dp"
            android:drawableLeft="@drawable/ic_https_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:hint=" Konfirmasi Password"
            android:background="@color/colorPrimary"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:typeface="serif"
            android:id="@+id/txtPasswordKonfirmasi"
            android:inputType="textPassword"
            />

        <Button
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:paddingLeft="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Ubah Password"
            android:pointerIcon="hand"
            android:textColor="#fff"
            android:typeface="serif"
            android:id="@+id/btnChange"
            android:layout_marginBottom="10dp"
            android:nestedScrollingEnabled="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:typeface="serif"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:background="#00ff00"
            android:padding="5dp"
            android:text=""
            android:visibility="gone"
            android:id="@+id/resultChange"/>
    </LinearLayout>

</ScrollView>
