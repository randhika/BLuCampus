<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="false"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--<ImageView-->
                <!--android:layout_width="150dp"-->
                <!--android:layout_height="150dp"-->
                <!--android:padding="20dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:scaleType="center"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:id="@+id/imgInfo"-->
                <!--android:background="@drawable/logo"/>-->

            <!--android:layout_below="@id/imgInfo"-->
            <TextView
                android:id="@+id/judul_info"
                android:text="Judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"

                style="@style/Base.CardView"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/isi_info"
                android:text="Isi Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/judul_info"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icon_Date"
                android:layout_below="@+id/isi_info"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_event_available_black_24dp"/>

            <TextView
                android:id="@+id/tanggal_info"
                android:text="Tanggal Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/icon_Date"
                android:layout_below="@id/isi_info"
                style="@style/Base.TextAppearance.AppCompat"
                />
            <TextView
                android:id="@+id/slug_url"
                android:text="SLUG URL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/isi_html_acara"
                android:text="Isi HTML ACARA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>