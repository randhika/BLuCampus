<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Activity.ChooseRegister">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/student"
            android:onClick="studentRegister"
            android:id="@+id/imgStudent"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mahasiswa Budi Luhur"
            android:textColor="#000"
            android:textSize="24dp"
            android:typeface="serif"
            android:onClick="studentRegister"
            android:id="@+id/viewStudent"/>

        <View
            android:layout_width="200dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atau"
            android:id="@+id/viewAtau"
            android:layout_marginTop="10dp"
            android:textSize="24dp"
            android:typeface="serif"
            android:textColor="#000"/>
        <View
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/guest"
            android:onClick="guestRegister"
            android:id="@+id/imgGuest"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest"
            android:textColor="#000"
            android:textSize="24dp"
            android:typeface="serif"
            android:onClick="guestRegister"
            android:id="@+id/viewGuest"/>

    </LinearLayout>
</ScrollView>
